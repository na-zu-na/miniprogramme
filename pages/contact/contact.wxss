
.act_list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  /* border: dotted 2px rgb(218, 231, 238); */
}

.nav{
  display: flex;
  flex-direction: column;
}

.act_list_image{
  height: 200rpx;
  width: 350rpx;
  object-fit: contain;
  align-self: center;
  position: absolute;
  top: 30px;
  padding:0 5px;
}

.act_nav{
  display: flex;
}

.act{
  flex-direction: column;
  justify-content: center;
  align-content: center;
  margin:5px 0;
  display: flex;
  border-bottom: solid rgb(218, 231, 238) 1px;
  box-shadow: 2px 2px 2px 2px rgb(187, 185, 185);
  height: 210px;
  width: 49%;
  position: relative; /* 父容器设置为相对定位 */
}

.act_text{
  position: absolute;
  top: 270rpx;
  margin-left:5px ;
  padding-right: 5px;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: auto;
}

.title{
  margin-bottom:5px ;
  width: 100%;          /* 设置宽度为100% */
  white-space: normal;  /* 允许文本换行 */
  overflow-wrap: break-word; /* 在单词边界处换行 */
  font-weight: bold;
  font-size: 15px;
}
.read{
  color: gray;
  font-size: 13px;
  margin-left:5px ; 
  position: absolute;
  top: 5px;
}

.text_add{
  margin:0 5px ;
  display: flex;
  justify-content: space-between;
  color: gray;
  font-size: 13px;
  width: 100%;
  padding-right: 9px;
  position: absolute;
  bottom: 0;
}