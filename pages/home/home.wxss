/* pages/home/home.wxss */
.swiper_item{
  height: 150px;
  line-height: 150px;
  text-align: center;
}

.swiper_item view{
  background-color: rgb(93, 210, 240);
}

.note{
  font-size: 15px;
  font-weight:bold;
  line-height: 40px;
  height: 40px;
  background-color: rgb(243, 236, 236);
  margin: 15px 0;
  padding: 0 30px;
  border: 2px solid white;
  box-shadow: 2px 2px 2px 2px gray;
}

.act_list{
  display: flex;
  flex-direction: column;
  padding: 5px;
  border: dotted 2px rgb(218, 231, 238);
}

.act_list image{
  height: 150rpx;
  width: 200rpx;
}

.act, .act_video{
  margin-bottom:5px;
  display: flex;
  border-bottom: solid rgb(218, 231, 238) 1px;
  box-shadow: 2px 2px 2px 2px rgb(187, 185, 185);
}

.act_text{
  margin-left:10px ;
  width: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.act_text text:nth-child(1){
  font-weight: bold;
}