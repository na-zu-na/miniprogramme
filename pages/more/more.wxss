/* pages/more/more.wxss */
.note{
  font-size: 17px;
  font-weight:bold;
  line-height: 40px;
  height: 40px;
  justify-content: center;
  background-color: rgb(243, 236, 236);
  /* background-color: rgb(141, 29, 29); */
  margin: 5px 0;
  padding: 0 10px;
  border-top: 2px solid rgba(255, 255, 255, 0.699);
  color: gray;
}

.act_list{
  display: flex;
  flex-direction: column;
  padding: 5px;
  /* border: dotted 2px rgb(218, 231, 238); */
}

.act_list image{
  height: 150rpx;
  width: 200rpx;
}

.act_nav{
  display: flex;
}

.act{
  margin-bottom:10px;
  display: flex;
  border-bottom: solid rgb(218, 231, 238) 1px;
  box-shadow: 2px 2px 2px 2px rgb(187, 185, 185);
  height: auto;
}

.act_text{
  margin-top: 5px;
  margin-left:10px ;
  width: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: auto;
}

.title{
  margin-bottom:5px ;
}


.text_add{
  margin-top: 10px;
  display: flex;
  justify-content: space-between;
  color: gray;
  font-size: 13px;
}

.act_text text:nth-child(1){
  font-weight: bold;
}